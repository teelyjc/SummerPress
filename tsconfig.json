{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "baseUrl": ".",
    "paths": {
      "@summerpress/*": ["src/app/*"]
    },

    "rootDir": "src",
    "outDir": "dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
